<style lang="scss">
  .modal-cart_bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #0000003b;
    z-index: 100;
    display: none;
  }
  .modal-cart_content {
    position: fixed;
    top: 1rem;
    right: -110%;
    bottom: 1rem;
    width: 90%;
    max-width: 30rem;
    background: white;
    z-index: 107;
    transition: right 0.3s linear;
    overflow-y: auto;
    padding: 1rem;
    border-radius: 0.8rem;
  }
  :global(.expand-cart) {
    .modal-cart_bg {
      display: block;
    }
    .modal-cart_content {
      right: 1rem;
    }
  }
</style>
